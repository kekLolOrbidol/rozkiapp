<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomizeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/appbarL"
        app:layout_constraintBottom_toTopOf="@+id/selectColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backImg"
            android:layout_width="103dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/abc_vector_test"
            tools:srcCompat="@drawable/abc_vector_test" />

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/selectColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="selectColor"
        android:text="Select Color"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/selectXColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarL"/>

    <Button
        android:id="@+id/selectXColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="selectColor"
        android:text="Select X color"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/selectOColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectColor"
        app:layout_constraintVertical_bias="0.478" />

    <Button
        android:id="@+id/selectOColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Select O Color"
        android:textAllCaps="false"
        android:onClick="selectColor"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/resetBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectXColor" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:onClick="selectColor"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectOColor" />


</androidx.constraintlayout.widget.ConstraintLayout>